---
export interface Props {
  outlined?: boolean;
  class?: string;
}

const { outlined, class: className } = Astro.props;
---

<section class:list={['container', {outlined}, className]}>
  <slot></slot>
</section>

<style lang="scss">
:global(.container) {
  background: linear-gradient(to bottom, rgba(233, 233, 233, 0.06875) 0%,rgba(191, 191, 191, 0.04) 100%);
  padding: .75rem;
  border-radius: var(--border-radius);

  &.outlined {
    outline: 1px solid var(--color-accent);
  }

  :global(h2) {
    margin-block-start: .5rem;
    margin-block-end: 1rem;
  }
}
</style>
